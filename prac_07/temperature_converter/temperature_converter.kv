BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.3333
        Label:
            text: "Temperature Converter"
            size_hint_x: 0.8
        Button:
            text: "Swap"
            size_hint_x: 0.2
            on_press: app.swap()
    GridLayout:
        rows: 2
        cols: 3
        size_hint_y: 0.6666
        Label:
            text: app.input_unit
        Label:
        Label:
            text: app.output_unit
        TextInput:
            text: app.input
            on_text: app.convert(self.text)
        Label:
            text: "="
        Label:
            text: app.output