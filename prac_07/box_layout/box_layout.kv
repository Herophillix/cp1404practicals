BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Clear"
            on_press: app.clear()
            size_hint_x: 0.2
        TextInput:
            text: ""
            size_hint_x: 0.8
            id: name
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Greet"
            on_press: app.greet()
            size_hint_x: 0.2
        Label:
            text: app.message
            size_hint_x: 0.8